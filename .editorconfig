# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
tab_width = 2
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.json]
indent_size = 2
indent_style = space
quote_keys = true

[*.md]
trim_trailing_whitespace = false
